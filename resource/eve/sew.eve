sew_lower:
   set(A,1)
sew_lower1:
   quake
   sleep(8)
   mapstate(A)
   sleep(8)
   quake
   sleep(16)
   inc(A)
   if(A,CL,4,sew_lower1)
   hitstate(2)
   put(1,VAR_SEWWATER)
   end

sew_raise:
   set(A,1)
   set(B,2)
sew_raise1:
   quake
   sleep(8)
   mapstate(B)
   sleep(8)
   quake
   sleep(16)
   inc(A)
   dec(B)
   if(A,CL,4,sew_raise1)
   hitstate(0)
   put(0,VAR_SEWWATER)
   end

